<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <record id="product_uom_categ_form_view" model="ir.ui.view">
        <field name="name">product.alloy.form</field>
        <field name="model">product.alloy</field>
        <field name="arch" type="xml">
            <form string="Alloy category">
                <sheet>
                    <group>
                        <field name="name"/>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <record id="product_uom_categ_tree_view" model="ir.ui.view">
        <field name="name">product.alloy.tree</field>
        <field name="model">product.alloy</field>
        <field name="arch" type="xml">
            <tree string="Alloy category" editable="bottom">
                <field name="name"/>
            </tree>
        </field>
    </record>

    <record id="product_alloy_categ_form_action" model="ir.actions.act_window">
        <field name="name">Alloy Category</field>
        <field name="type">ir.actions.act_window</field>
        <field name="res_model">product.alloy</field>
        <field name="view_mode">tree,form</field>
    </record>
</odoo>